interval=1

[module/mic-volume]
type = custom/script
interval = 1
format =  <label>
exec = bash ~/.config/polybar/scripts/mic-volume.sh show-vol 'alsa_input.pci-0000_31_00.4.analog-stereo'

; Control actions (using pactl)
click-left = bash ~/.config/polybar/scripts/mic-volume.sh mute-vol 'alsa_input.pci-0000_31_00.4.analog-stereo'
scroll-up = bash ~/.config/polybar/scripts/mic-volume.sh inc-vol 'alsa_input.pci-0000_31_00.4.analog-stereo'
scroll-down = bash ~/.config/polybar/scripts/mic-volume.sh dec-vol 'alsa_input.pci-0000_31_00.4.analog-stereo'

